<?xml version="1.0" ?>
<a>
  <keyboard id="pierre">
    <keybind key="W-F5">
      <action name="Reconfigure" />
    </keybind>
    <keybind key="A-F1">
      <action name="execute"><execute>gnome-panel-control --main-menu</execute></action>
    </keybind>
    <keybind key="A-F2">
      <action name="execute"><execute>gnome-panel-control --run-dialog</execute></action>
    </keybind>

    <keybind key="C-S-A-Left">
      <action name="SendToDesktop"><to>left</to><wrap>no</wrap></action>
    </keybind>
    <keybind key="C-S-A-Right">
      <action name="SendToDesktop"><to>right</to><wrap>no</wrap></action>
    </keybind>

    <keybind key="C-A-Up">
      <action name="Execute">
        <command>amixer set Master 5%+ unmute</command>
      </action>
    </keybind>
    <keybind key="C-A-Down">
      <action name="Execute">
        <command>amixer set Master 5%- unmute</command>
      </action>
    </keybind>
    <keybind key="C-A-m">
      <action name="Execute">
        <command>amixer set Master toggle</command>
      </action>
    </keybind>

    <keybind key="C-A-t">
      <action name="Execute">
        <!--<command>gnome-terminal</command>-->
        <command>xterm</command>
      </action>
    </keybind>
    <keybind key="W-a">
      <action name="Execute">
        <!--<command>gnome-terminal</command>-->
        <command>xterm</command>
      </action>
    </keybind>
    <keybind key="W-e">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh emacs</command>
      </action>
    </keybind>

    <keybind key="W-twosuperior">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh Chrom</command>
      </action>
    </keybind>
    <keybind key="W-ampersand">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term1</command>
      </action>
    </keybind>
    <keybind key="W-eacute">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term2</command>
      </action>
    </keybind>
    <keybind key="W-quotedbl">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term3</command>
      </action>
    </keybind>
    <keybind key="W-apostrophe">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term4</command>
      </action>
    </keybind>
    <keybind key="W-parenleft">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term5</command>
      </action>
    </keybind>
    <keybind key="W-minus">
      <action name="Execute">
        <command>~/dotfiles/bin/focus_minimize.sh term6</command>
      </action>
    </keybind>

    <keybind key="W-Left">
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="MoveResizeTo">
        <width>960</width>
      </action>
      <action name="MoveToEdgeWest"/>
    </keybind>

    <keybind key="W-Right">
      <action name="UnmaximizeFull"/>
      <action name="MaximizeVert"/>
      <action name="MoveResizeTo">
        <width>960</width>
      </action>
      <action name="MoveToEdgeEast"/>
    </keybind>


<!--
    <keybind key="W-Left">
      <action name="UnMaximize"/>
      <action name="Execute">
        <command>~/dotfiles/bin/moveto.sh left 1</command>
      </action>
    </keybind>

    <keybind key="W-Right">
      <action name="UnMaximize"/>
      <action name="Execute">
        <command>~/dotfiles/bin/moveto.sh right 1</command>
      </action>
    </keybind>
-->
    <keybind key="W-Up">
      <action name="ToggleMaximize"/>
    </keybind>
  </keyboard>

  <keyboard id="default">
  </keyboard>

  <mouse id="pierre">
    <a/>
    <context name="Frame">
    <mousebind button="A-Left" action="Drag">
      <action name="UnmaximizeFull"/>
      <action name="Move"/>
    </mousebind>
    </context>
  </mouse>
</a>
